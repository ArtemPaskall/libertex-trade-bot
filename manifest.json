{
    "name": "zero-md-tilda-rendering-chrome-extension",
    "version": "0.1.0",
    "description": "Renders zero-md to html in html tilda blocks before publishing",
    "permissions": ["storage", "tabs", "activeTab", "nativeMessaging", "background"],
    "host_permissions": ["https://tilda.cc/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://tilda.cc/*"],
        "js": ["contentScript.js"],
        "type": "module"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "my-script.js",
          "codalize.js"
        ],
        "matches": ["https://tilda.cc/*"],
        "type": "module"
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/tilda.png",
        "24": "assets/tilda.png",
        "32": "assets/tilda.png"
      },
      "default_title": "Renders zero-md to html in html tilda blocks",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
